<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ck.backend.mapper.SpeciaMapper">

    <resultMap type="com.ck.backend.pojo.Specia" id="SpeciaMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SpeciaMap">
        select id,
               name
        from specia
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SpeciaMap">
        select
        id, name
        from specia
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from specia
        <where>
            <if test="search != null and search != ''">
                and  `name` like '%${search}%'
            </if>
        </where>
    </select>
    <select id="getAll" resultType="com.ck.backend.pojo.Specia">
        select *
        from specia
    </select>
    <resultMap id="getAllFullMap" type="com.ck.backend.pojo.Specia">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <association property="questionCourse"
                     select="com.ck.backend.mapper.QuestionCourseMapper.getCourseAndGroupBySpeciaid" column="id"/>
    </resultMap>
    <select id="getAllFull" resultMap="getAllFullMap">
        select *
        from specia
    </select>
    <select id="selectLimit" resultType="com.ck.backend.pojo.Specia">
        select *
        from specia
        <where>
            <if test="search != null and search != ''">
                and `name`  like '%${search}%'
            </if>
        </where>
        limit ${(page-1)*10},10
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into specia(name)
        values (#{name})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into specia(name)
        values
        <foreach collection="entities" item="pojo" separator=",">
            (#{pojo.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into specia(name)
        values
        <foreach collection="entities" item="pojo" separator=",">
            (#{pojo.name})
        </foreach>
        on duplicate key update
        name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update specia
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from specia
        where id = #{id}
    </delete>
    <delete id="deletes">
        <if test="ids != null and ids != ''">
            delete
            from specia
            where id in (${ids})
        </if>
    </delete>

</mapper>

